<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:background="@drawable/contour_citation"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/citation_text"
        android:layout_margin="5dp"
        android:paddingTop="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="left"
        android:text="Exige beaucoup de toi-même et attends peu des autres. Ainsi beaucoup d'ennuis te seront épargnés."
        android:textColor="#FEFEFE"
        android:textSize="20sp"
       />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_height="35dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="Par"
            android:textColor="#FEFEFE"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:id="@+id/citation_auteur"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:text="Confucius"
            android:textStyle="bold|italic"
            android:textColor="#FEFEFE"
            android:textSize="18sp"/>

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="40dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#003c4850"
            android:layout_gravity="right">

            <!--android:layout_marginRight="25dp"
                                android:layout_marginLeft="10dp"-->
            <ImageButton
                android:id="@+id/voir_auteur"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/info"
                android:scaleType="fitCenter"
                android:layout_toLeftOf="@+id/share_bouton"
                android:layout_alignParentBottom="true" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#40D0CFD0"
                android:layout_toLeftOf="@id/share_bouton"
                android:layout_alignParentBottom="true" />

            <ImageButton
                android:id="@id/share_bouton"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                android:src="@drawable/share"
                android:layout_toLeftOf="@+id/copy_citation"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#40D0CFD0"
                android:layout_toLeftOf="@id/copy_citation"
                android:layout_alignParentBottom="true" />

            <ImageButton
                android:id="@id/copy_citation"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/copy"
                android:scaleType="fitCenter"
                android:layout_toLeftOf="@+id/favoris_bouton"
                android:layout_alignParentBottom="true"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#40D0CFD0"
                android:layout_toLeftOf="@id/favoris_bouton"
                android:layout_alignParentBottom="true"/>

            <ImageButton
                android:id="@id/favoris_bouton"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/star_empty"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>